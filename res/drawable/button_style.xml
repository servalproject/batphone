<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
 <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/green"
                android:endColor="@color/green"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/grey" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/palegreen"
                android:startColor="@color/palegreen"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/grey" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_active="true">        
        <shape>
            <gradient
                android:endColor="@color/green"
                android:startColor="@color/green"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/grey" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

  
</selector>